<div class='standard-view'>
  <h1>Edit Holiday</h1>
  <div>
    <%= form_for @holiday do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label "#{:date} (DD-MM-YYYY)" %>
      <%= f.text_field :date %>

      <%= f.label :country %>
      <%= f.select :country, options_for_select(
                   ['BE', 'BR', 'CA', 'CZ', 'DE', 'FR',
                    'GB', 'NO', 'PL', 'SK', 'SL', 'US']) %>

      <%= f.submit "Edit Holiday", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
